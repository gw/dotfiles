{
    "editor.fontFamily": "CommitMonoLightNarrow",
    "editor.lineHeight": 1.33,
    "editor.fontSize": 13.5,
    "workbench.quickOpen.closeOnFocusLost": false,
    "editor.cursorStyle": "block",
    "editor.cursorSurroundingLines": 5,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "editor.cursorBlinking": "solid",
    "explorer.excludeGitIgnore": true,
    "search.useGlobalIgnoreFiles": true,
    "search.useParentIgnoreFiles": true,
    "workbench.sideBar.location": "right",
    "files.insertFinalNewline": true,
    "git.autofetch": true,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,
    "git.useIntegratedAskPass": false,
    "git.terminalAuthentication": false,
    "terminal.integrated.scrollback": 10000,
    "editor.lightbulb.enabled": "off",
    "[dockercompose]": {
        "editor.codeLens": false
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "git.enableSmartCommit": true,
    "githubPullRequests.fileListLayout": "tree",
    "workbench.panel.defaultLocation": "right",
    // Uncomment these if using Cursor
    // "editor.inlineSuggest.enabled": false,
    // "editor.quickSuggestions": {
    //     "other": "off"
    // },
    // "editor.suggestOnTriggerCharacters": false,
    "githubPullRequests.pullBranch": "never",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.tabCompletion": "on",
    "containers.containers.groupBy": "None",
    "containers.containers.description": [
        "Status"
    ],
    "containers.containers.label": "ContainerName",
    "containers.containers.sortBy": "CreatedTime",
    "workbench.activityBar.location": "hidden",
    "editor.fontLigatures": true,
    "terminal.integrated.fontLigatures.enabled": true,
    "terminal.integrated.fontFamily": "Jetbrains Mono NL",
    "editor.stickyTabStops": true,
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "diffEditor.renderSideBySide": false,
    "editor.formatOnSave": true,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "window.zoomLevel": 0.1,
    "terminal.integrated.tabs.enabled": false,
    "workbench.colorTheme": "Default Light Modern",
    "editor.minimap.autohide": "mouseover",
    "editor.minimap.enabled": false,
}
